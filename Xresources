! run xrdb ~/.Xresources

! scrollback buffer lines - 65535 is max on most machines (64 is default)
URxvt*saveLines: 12000

! font color (default is black)
! URxvt*foreground: White

! true transparency (not to be confused with transparent: true) <-wtf?
URxvt.depth: 32
! background color (prior to tinting) (default is white)
! URxvt*background: [70]#000000
! URxvt.foreground: white

! Xft: DejaVu fonts
URxvt*font: xft:DejaVu Sans Mono:pixelsize=17:antialias=true:hinting=true

! scrollbar - true (default) or false
URxvt*scrollBar: true

! scrollbar position - left=false (default) or right=true
URxvt*scrollBar_right: true

URxvt*borderLess: false
URxvt*internalBorder: 1

! scrollbar style - rxvt (default), plain, next, or xterm
URxvt*scrollstyle: plain

URxvt.loginShell: true
URxvt.chdir: /home/brosas

! color man file output
! URxvt.colorIT: #88af5f
! URxvt.colorBD: #d7d7d7
! URxvt.colorUL: #87afd7

! URxvt.termName: rxvt-unicode

! disable ctrl+shift character thingy
URxvt*iso14755: false

! https://bbs.archlinux.org/viewtopic.php?id=164108
URxvt.intensityStyles: false

! disable perl extensions completely
URxvt.perl-ext-common:

! https://github.com/solarized/xresources
! Solarized color scheme for the X Window System
!
! http://ethanschoonover.com/solarized


